{
  "name": "serge",
  "version": "0.2.0",
  "main": "index.js",
  "repository": "git@github.com:serge-web/serge.git",
  "author": "foxleigh81 <alex@alexfoxleigh.com>",
  "license": "Apache-2.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "leaflet-easybutton": "^2.4.0",
    "lerna": "^3.16.4",
    "npm-run-all": "^4.1.5",
    "snyk": "^1.258.2"
  },
  "scripts": {
    "start": "run-p start:*",
    "start:server": "cd packages/server && yarn start",
    "start:client": "cd packages/client && yarn start",
    "test": "run-p test:*",
    "test:e2e": "cd packages/e2e && yarn run cypress open ",
    "test:unit": "cd packages/client && yarn test",
    "lint": "run-p lint:*",
    "lint:themes": "cd packages/themes; stylelint *.scss --fix",
    "build": "lerna run build --scope=@serge/client",
    "pkg-build": "cd packages/executable && yarn start",
    "diff": "lerna diff",
    "heroku-postbuild": "yarn build",
    "serge": "yarn start:server",
    "snyk-protect": "snyk protect",
    "prepare": "yarn run snyk-protect"
  },
  "snyk": true
}
