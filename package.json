{
  "name": "serge-web",
  "version": "0.2.0",
  "main": "index.js",
  "repository": "git@github.com:serge-web/serge-web.git",
  "author": "foxleigh81 <alex@alexfoxleigh.com>",
  "license": "Apache-2.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "lerna": "^3.16.4",
    "npm-run-all": "^4.1.5"
  },
  "scripts": {
    "start": "run-p start:*",
    "start:server": "cd packages/server; yarn start",
    "start:client": "cd packages/client; yarn start",
    "test" : "run-p test:*",
    "test:e2e" : "cd packages/e2e; yarn run cypress open ",
    "test:unit" : "cd packages/client; yarn test",
    "lint" : "run-p lint:*",
    "lint:themes" : "cd packages/themes; stylelint *.scss --fix",
    "build": "lerna run build --scope=@serge/client",
    "diff": "lerna diff",
    "heroku-postbuild": "yarn build",
    "serge" : "yarn start:server"
  }
}
