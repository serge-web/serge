{
  "exclude": ["node_modules", "dist", "build", "lib", "__tests__", "**/*.test*", "**/*.scss.d.ts"],
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es5",
      "es6",
      "es7",
      "es2017",
      "ES2019"
    ],
    "types": ["vite/client", "vite-plugin-svgr/client", "jest", "@types/jest"],
    "allowJs": true,
    "typeRoots": ["./node_modules/@types/", "./types", "./node_modules"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "es2020",
    "moduleResolution": "node",
    "ignoreDeprecations": "5.0",
    // this option is now deprecated, but we're ignoring the deprecations with the `ignoreDeprecations: 5.0` option
    "suppressImplicitAnyIndexErrors": true,
    "declaration": true,
    "resolveJsonModule": true,
    "noEmit": true, // note: Removing the 'noEmit' directive will result in the compilation of the 'src' folder.
    "jsx": "react",
    "composite": false,
    "noFallthroughCasesInSwitch": true,
    "downlevelIteration": true,
    "removeComments": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "baseUrl": ".",
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./build"
  },
  "files": ["./typings.d.ts"],
  "src/*": ["src/*"],
  "include": ["src"],
}
